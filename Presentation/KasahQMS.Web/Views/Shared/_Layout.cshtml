@using System.Security.Claims
@using KasahQMS.Application.Common.Security
@inject KasahQMS.Application.Common.Interfaces.ICurrentUserService CurrentUserService
@inject KasahQMS.Application.Common.Security.IAuthorizationService AuthorizationService
@inject KasahQMS.Application.Common.Interfaces.Services.IHierarchyService HierarchyService
@{
    var displayName = User?.Identity?.Name ?? "User";
    var roles = CurrentUserService.Roles.ToList();
    var roleLabel = roles.FirstOrDefault() ?? "Member";
    var initials = displayName.Length >= 2 ? displayName.Substring(0, 2).ToUpper() : displayName.ToUpper();
    
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    Guid? userGuid = userId != null ? Guid.Parse(userId) : null;

    // Permission checks for navigation
    var canViewAnalytics = await AuthorizationService.HasPermissionAsync(Permissions.Analytics.View);
    var canViewReports = await AuthorizationService.HasPermissionAsync(Permissions.Reports.View);

    var canViewApprovals = await AuthorizationService.HasAnyPermissionAsync(new[] {
        Permissions.Documents.Approve,
        Permissions.Tasks.Assign,
        Permissions.Capa.Assign
    });

    // Supervision usually for TMD/Executives
    var canViewSupervision = await AuthorizationService.HasAnyPermissionAsync(new[] {
        Permissions.Users.ViewAll,
        Permissions.System.ViewSystemHealth
    });

    var canViewDocuments = await AuthorizationService.HasPermissionAsync(Permissions.Documents.View);
    var canCreateDocuments = await AuthorizationService.HasPermissionAsync(Permissions.Documents.Create);

    var canViewTasks = await AuthorizationService.HasPermissionAsync(Permissions.Tasks.View);
    var canCreateTasks = await AuthorizationService.HasPermissionAsync(Permissions.Tasks.Create);

    var canViewCapa = await AuthorizationService.HasPermissionAsync(Permissions.Capa.View);
    var canCreateCapa = await AuthorizationService.HasPermissionAsync(Permissions.Capa.Create);

    var canViewAudits = await AuthorizationService.HasPermissionAsync(Permissions.Audits.View);
    var canViewStock = await AuthorizationService.HasPermissionAsync(Permissions.Stock.View);
    
    // Permission Delegation: User must be a manager (have subordinates) to delegate
    var canDelegatePermissions = userGuid.HasValue && await HierarchyService.IsManagerAsync(userGuid.Value);

    // Administration Section
    var canManageUsers = await AuthorizationService.HasPermissionAsync(Permissions.Users.View);
    var canManageRoles = await AuthorizationService.HasPermissionAsync(Permissions.Roles.View);
    var canManagePolicies = await AuthorizationService.HasPermissionAsync(Permissions.Documents.ViewAll); // Using Doc ViewAll as proxy for now
    var canManageDepartments = await AuthorizationService.HasPermissionAsync(Permissions.Organization.View);
    var canViewAuditLogs = await AuthorizationService.HasPermissionAsync(Permissions.AuditLogs.View);
    var canManageSettings = await AuthorizationService.HasPermissionAsync(Permissions.System.ManageSettings);

    var showAdminSection = canManageUsers || canManageRoles || canManageDepartments || canViewAuditLogs || canManageSettings;

    // Check for "Auditor" role specifically for the badge, or derive it.
    // Using role check here for the visual badge only.
    var isAuditor = await AuthorizationService.IsInRoleAsync("Auditor");
    var hasQuickAdd = canCreateDocuments || canCreateTasks || (canCreateCapa && !isAuditor);
}
