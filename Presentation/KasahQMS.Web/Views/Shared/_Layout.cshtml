                    <a data-nav="/settings" href="/Settings" class="nav-link flex items-center gap-3 rounded-xl px-3 py-2.5 text-slate-600 hover:bg-brand-50 hover:text-brand-700 font-medium">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        </svg>
                        <span>Settings</span>
                    </a>
                    }
                </div>
            }

            <!-- Help & Support -->
            <div class="pt-4 border-t border-slate-100">
                <a href="/Support" class="nav-link flex items-center gap-3 rounded-xl px-3 py-2.5 text-slate-500 hover:bg-slate-50 hover:text-slate-700 font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>Help & Support</span>
                </a>
            </div>
        </nav>
    </aside>

    <div class="flex-1 flex flex-col min-h-screen lg:ml-[280px]">
        <!-- Top Header -->
        <header class="h-[72px] bg-white/80 backdrop-blur-md border-b border-slate-200/80 flex items-center justify-between px-6 sticky top-0 z-30">
            <div class="flex items-center gap-4">
                <!-- Mobile Menu Toggle -->
                <button class="lg:hidden p-2 -ml-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-lg transition-colors" @@click="sidebarOpen = true">
                    <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>

                <!-- Global Search -->
                <div class="relative hidden sm:block">
                    <input type="search" placeholder="Search documents, tasks, audits..."
                           class="w-80 rounded-xl border border-slate-200 bg-slate-50/50 px-4 py-2.5 pl-11 text-sm placeholder-slate-400 focus:border-brand-400 focus:bg-white focus:ring-2 focus:ring-brand-100 transition-all">
                    <svg class="absolute left-4 top-3 h-4 w-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    <kbd class="absolute right-3 top-2.5 hidden lg:inline-flex items-center px-2 py-0.5 text-xs font-medium text-slate-400 bg-slate-100 rounded">⌘K</kbd>
                </div>
            </div>

            <div class="flex items-center gap-2">
                <!-- Quick Actions (Hidden for Auditors - Read-only role) -->
                @if (hasQuickAdd)
                {
                <div class="relative hidden md:block" x-data="{ open: false }">
                    <button @@click="open = !open" class="flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-600 hover:text-brand-600 hover:bg-brand-50 rounded-lg transition-colors">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Quick Add
                    </button>
                    
                    <!-- Dropdown -->
                    <div x-show="open" x-cloak
                         x-transition:enter="transition ease-out duration-150"
                         x-transition:enter-start="opacity-0 scale-95"
                         x-transition:enter-end="opacity-100 scale-100"
                         x-transition:leave="transition ease-in duration-100"
                         x-transition:leave-start="opacity-100 scale-100"
                         x-transition:leave-end="opacity-0 scale-95"
                         @@click.outside="open = false"
                         class="absolute right-0 mt-2 w-48 rounded-xl border border-slate-200 bg-white shadow-xl shadow-slate-200/50 py-1 origin-top-right">
                        @if (canCreateDocuments)
                        {
                        <a href="/Documents/Create" class="flex items-center gap-2 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors">
                            <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                            New Document
                        </a>
                        }
                        @if (canCreateTasks)
                        {
                            <a href="/Tasks/Create" class="flex items-center gap-2 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors">
                                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/></svg>
                                New Task
                            </a>
                        }
                        @if (canCreateCapa)
                        {
                            <a href="/Capa?action=create" class="flex items-center gap-2 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors">
                                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                                New CAPA
                            </a>
                        }
                    </div>
                </div>
                }
                @if (isAuditor)
                {
                <div class="hidden md:flex items-center gap-2 px-3 py-2 text-sm font-medium text-amber-700 bg-amber-50 rounded-lg">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    Read-only Mode
                </div>
                }

                <!-- Notifications -->
                <div class="relative" x-data="notificationsDropdown()" x-init="init()">
                    <button @@click="open = !open; if(open) fetchNotifications()" class="relative p-2.5 text-slate-400 hover:text-slate-600 hover:bg-slate-100 rounded-lg transition-colors">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                        </svg>
                        <span id="notification-dot" x-show="unreadCount > 0" x-cloak class="absolute top-2 right-2 h-2 w-2 rounded-full bg-brand-500 ring-2 ring-white"></span>
                        <span id="badge-notifications" class="hidden absolute -top-1 -right-1 min-w-[18px] h-[18px] px-1 text-[10px] font-bold text-white bg-brand-500 rounded-full flex items-center justify-center">0</span>
                    </button>
                    <div x-show="open" x-cloak @@click.outside="open = false"
                         x-transition class="absolute right-0 mt-2 w-96 rounded-xl border border-slate-200 bg-white shadow-xl py-2 origin-top-right z-50">
                        <div class="px-4 py-2 border-b border-slate-100 flex justify-between items-center">
                            <span class="font-semibold text-slate-800">Notifications</span>
                            <a href="/Notifications" class="text-sm text-brand-600 hover:underline">View all</a>
                        </div>
                        <div class="max-h-80 overflow-y-auto">
                            <template x-if="loading">
                                <div class="p-4 text-center text-slate-500 text-sm">Loading...</div>
                            </template>
                            <template x-if="!loading && (!items || items.length === 0)">
                                <div class="p-4 text-center text-slate-500 text-sm">No notifications</div>
                            </template>
                            <template x-if="!loading && items && items.length > 0">
                                <div class="divide-y divide-slate-100">
                                    <template x-for="n in items" :key="n.id">
                                        <a :href="n.relatedEntityType === 'TaskAssignment' && n.relatedEntityId ? '/Tasks/Details/' + n.relatedEntityId : (n.relatedEntityType === 'DocumentSubmitted' && n.relatedEntityId ? '/Documents/Details/' + n.relatedEntityId : '/Notifications')"
                                           class="block px-4 py-3 hover:bg-slate-50 text-left">
                                            <div class="font-medium text-slate-900 text-sm" x-text="n.title"></div>
                                            <div class="text-slate-500 text-xs mt-0.5" x-text="n.message"></div>
                                            <div class="text-slate-400 text-xs mt-1" x-text="n.createdAt ? new Date(n.createdAt).toLocaleString() : ''"></div>
                                        </a>
                                    </template>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>

                <!-- Divider -->
                <div class="hidden md:block h-8 w-px bg-slate-200 mx-1"></div>

                <!-- User Menu -->
                <div class="relative" x-data="{ open: false }">
                    <button class="flex items-center gap-3 pl-2 pr-3 py-1.5 hover:bg-slate-50 rounded-xl transition-colors" @@click="open = !open">
                        <div class="h-9 w-9 rounded-xl bg-gradient-to-br from-brand-500 to-brand-700 flex items-center justify-center text-white text-sm font-bold shadow-md shadow-brand-500/30">
                            @initials
                        </div>
                        <div class="text-left hidden md:block">
                            <div class="text-sm font-semibold text-slate-800">@displayName</div>
                            <div class="text-xs text-slate-500">@roleLabel</div>
                        </div>
                        <svg class="hidden md:block h-4 w-4 text-slate-400 transition-transform" :class="open ? 'rotate-180' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                        </svg>
                    </button>

                    <!-- Dropdown Menu -->
                    <div x-show="open" x-cloak
                         x-transition:enter="transition ease-out duration-150"
                         x-transition:enter-start="opacity-0 scale-95"
                         x-transition:enter-end="opacity-100 scale-100"
                         x-transition:leave="transition ease-in duration-100"
                         x-transition:leave-start="opacity-100 scale-100"
                         x-transition:leave-end="opacity-0 scale-95"
                         @@click.outside="open = false"
                         class="absolute right-0 mt-2 w-56 rounded-xl border border-slate-200 bg-white shadow-xl shadow-slate-200/50 py-1 origin-top-right">
                        <div class="px-4 py-3 border-b border-slate-100">
                            <p class="text-sm font-semibold text-slate-900">@displayName</p>
                            <p class="text-xs text-slate-500 truncate">@roleLabel</p>
                        </div>
                        <div class="py-1">
                            <a class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors" href="/Profile">
                                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                </svg>
                                My Profile
                            </a>
                            <a class="flex items-center gap-3 px-4 py-2.5 text-sm text-slate-600 hover:bg-slate-50 hover:text-slate-900 transition-colors" href="/Settings">
                                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                </svg>
                                Settings
                            </a>
                        </div>
                        <div class="border-t border-slate-100 py-1">
                            <a class="flex items-center gap-3 px-4 py-2.5 text-sm text-accent-600 hover:bg-accent-50 transition-colors" href="/Account/Logout">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                </svg>
                                Sign out
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 p-6 lg:p-8">
            @RenderBody()
