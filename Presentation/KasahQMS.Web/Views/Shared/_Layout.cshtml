        <!-- Footer -->
        <footer class="px-6 py-4 border-t border-slate-200/80 bg-white/50">
            <div class="flex flex-col sm:flex-row items-center justify-between gap-2 text-xs text-slate-500">
                <p>© @DateTime.Now.Year KASAH Technologies. All rights reserved.</p>
                <p class="flex items-center gap-1">
                    <span class="inline-block w-2 h-2 bg-brand-500 rounded-full animate-pulse"></span>
                    System operational
                </p>
            </div>
        </footer>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js"></script>
<script>
 document.addEventListener('alpine:init', function() {
   Alpine.data('notificationsDropdown', function() {
     return {
       open: false,
       loading: false,
       items: [],
       unreadCount: 0,
       init: function() {
         var self = this;
         window.addEventListener('qms:notification', function() { self.unreadCount++; if (self.open) self.fetchNotifications(); });
       },
       fetchNotifications: function() {
         var self = this;
         self.loading = true;
         fetch('/api/NotificationsApi').then(function(r) { return r.json(); }).then(function(d) {
           self.items = d.items || [];
           self.unreadCount = d.unreadCount != null ? d.unreadCount : 0;
         }).catch(function() { self.items = []; }).finally(function() { self.loading = false; });
       }
     };
   });
 });
</script>
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script src="~/js/site.js"></script>
