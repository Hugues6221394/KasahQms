@page
@model KasahQMS.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex, nofollow" />
    <title>@ViewData["Title"] - KASAH QMS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'system-ui', '-apple-system', 'sans-serif'],
                    },
                    colors: {
                        brand: {
                            50: '#ecfdf5',
                            100: '#d1fae5',
                            200: '#a7f3d0',
                            300: '#6ee7b7',
                            400: '#34d399',
                            500: '#10b981',
                            600: '#059669',
                            700: '#047857',
                            800: '#065f46',
                            900: '#064e3b',
                            950: '#022c22',
                        },
                        accent: {
                            50: '#fef2f2',
                            100: '#fee2e2',
                            500: '#ef4444',
                            600: '#dc2626',
                        }
                    }
                }
            }
        }
    </script>
    <style>
        .gradient-mesh {
            background-color: #022c22;
            background-image:
                radial-gradient(at 40% 20%, #059669 0px, transparent 50%),
                radial-gradient(at 80% 0%, #047857 0px, transparent 50%),
                radial-gradient(at 0% 50%, #065f46 0px, transparent 50%),
                radial-gradient(at 80% 50%, #10b981 0px, transparent 50%),
                radial-gradient(at 0% 100%, #064e3b 0px, transparent 50%),
                radial-gradient(at 80% 100%, #047857 0px, transparent 50%);
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .card-shine {
            position: relative;
            overflow: hidden;
        }

        .card-shine::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                to bottom right,
                rgba(255, 255, 255, 0) 0%,
                rgba(255, 255, 255, 0.05) 50%,
                rgba(255, 255, 255, 0) 100%
            );
            transform: rotate(45deg);
            animation: shine 4s infinite;
        }

        @@keyframes shine {
            0% { transform: translateX(-100%) rotate(45deg); }
            100% { transform: translateX(100%) rotate(45deg); }
        }
    </style>
</head>
<body class="h-full font-sans antialiased">
    <div class="min-h-full flex">
        <!-- Left Panel - Branding -->
        <div class="hidden lg:flex lg:w-1/2 xl:w-3/5 gradient-mesh relative overflow-hidden">
            <!-- Floating Elements -->
            <div class="absolute inset-0 overflow-hidden">
                <div class="absolute top-20 left-20 w-72 h-72 bg-brand-400/20 rounded-full blur-3xl floating"></div>
                <div class="absolute bottom-20 right-20 w-96 h-96 bg-brand-600/20 rounded-full blur-3xl floating" style="animation-delay: -2s;"></div>
                <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-brand-500/10 rounded-full blur-2xl floating" style="animation-delay: -4s;"></div>
            </div>

            <!-- Content -->
            <div class="relative z-10 flex flex-col justify-between p-12 w-full">
                <!-- Logo -->
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 bg-white/10 backdrop-blur-sm rounded-xl flex items-center justify-center border border-white/20">
                        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <span class="text-white font-bold text-xl tracking-tight">KASAH QMS</span>
                </div>

                <!-- Main Content -->
                <div class="max-w-lg">
                    <h1 class="text-4xl xl:text-5xl font-bold text-white leading-tight mb-6">
                        Enterprise Quality<br/>
                        <span class="text-brand-300">Management System</span>
                    </h1>
                    <p class="text-lg text-brand-100/80 leading-relaxed mb-8">
                        Streamline your quality processes, manage documents, track audits, and ensure compliance with our enterprise-grade QMS platform built for regulated industries.
                    </p>

                    <!-- Features -->
                    <div class="grid grid-cols-2 gap-4">
                        <div class="flex items-start gap-3">
                            <div class="w-8 h-8 bg-brand-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-brand-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-semibold text-white">Document Control</div>
                                <div class="text-xs text-brand-200/70">Version tracking & workflows</div>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="w-8 h-8 bg-brand-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-brand-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-semibold text-white">Audit Management</div>
                                <div class="text-xs text-brand-200/70">Internal & external audits</div>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="w-8 h-8 bg-brand-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-brand-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-semibold text-white">CAPA Tracking</div>
                                <div class="text-xs text-brand-200/70">Corrective & preventive actions</div>
                            </div>
                        </div>
                        <div class="flex items-start gap-3">
                            <div class="w-8 h-8 bg-brand-500/20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="w-4 h-4 text-brand-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                                </svg>
                            </div>
                            <div>
                                <div class="text-sm font-semibold text-white">Compliance Ready</div>
                                <div class="text-xs text-brand-200/70">ISO 9001 & regulatory</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="text-sm text-brand-200/60">
                    Trusted by enterprises worldwide for mission-critical quality management.
                </div>
            </div>
        </div>

        <!-- Right Panel - Login Form -->
        <div class="flex-1 flex flex-col justify-center px-4 sm:px-6 lg:px-20 xl:px-24 bg-white">
            <div class="mx-auto w-full max-w-sm">
                <!-- Mobile Logo -->
                <div class="lg:hidden flex items-center gap-3 mb-10">
                    <div class="w-11 h-11 bg-gradient-to-br from-brand-500 to-brand-700 rounded-xl flex items-center justify-center shadow-lg shadow-brand-500/30">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                        </svg>
                    </div>
                    <span class="font-bold text-xl text-slate-900">KASAH QMS</span>
                </div>

                <!-- Welcome Text -->
                <div class="mb-10">
                    <h2 class="text-3xl font-bold text-slate-900 tracking-tight">Welcome back</h2>
                    <p class="mt-2 text-slate-600">Sign in to your account to continue.</p>
                </div>

                <!-- Login Form -->
                <form method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="p-4 bg-accent-50 border border-accent-200 rounded-xl flex items-start gap-3">
                            <svg class="w-5 h-5 text-accent-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <p class="text-sm text-accent-700">@Model.ErrorMessage</p>
                        </div>
                    }

                    <div>
                        <label for="email" class="block text-sm font-medium text-slate-700 mb-2">Work Email</label>
                        <div class="relative">
                            <input type="email" id="email" name="Email"
                                value="@Model.Email"
                                required
                                autocomplete="email"
                                class="w-full px-4 py-3.5 pl-11 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-400 focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 transition-all"
                                placeholder="you@company.com">
                            <svg class="absolute left-4 top-4 w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                    </div>

                    <div>
                        <label for="password" class="block text-sm font-medium text-slate-700 mb-2">Password</label>
                        <div class="relative">
                            <input type="password" id="password" name="Password"
                                required
                                autocomplete="current-password"
                                class="w-full px-4 py-3.5 pl-11 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-400 focus:ring-2 focus:ring-brand-500/20 focus:border-brand-500 transition-all"
                                placeholder="Enter your password">
                            <svg class="absolute left-4 top-4 w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                            </svg>
                        </div>
                    </div>

                    <div class="flex items-center justify-between">
                        <div class="text-sm text-slate-500">
                            Use your issued account credentials.
                        </div>
                        <a href="#" class="text-sm font-medium text-brand-600 hover:text-brand-700 transition-colors">
                            Need help?
                        </a>
                    </div>

                    <button type="submit"
                        class="w-full py-3.5 px-4 bg-gradient-to-r from-brand-600 to-brand-700 text-white font-semibold rounded-xl hover:from-brand-700 hover:to-brand-800 focus:ring-4 focus:ring-brand-200 transition-all shadow-lg shadow-brand-500/30 hover:shadow-brand-500/40 hover:shadow-xl">
                        Sign In
                    </button>
                </form>

                <!-- Demo Credentials -->
                <div class="mt-8 rounded-xl border border-slate-200 bg-slate-50/50 p-5">
                    <div class="text-[11px] uppercase tracking-wider text-slate-500 font-semibold">Demo Credentials</div>
                    <div class="text-xs text-slate-500 mb-4">Default password: @Model.PasswordHint</div>
                    <div class="space-y-2.5">
                        @foreach (var item in Model.SampleCredentials)
                        {
                            <div class="flex items-center justify-between rounded-lg bg-white px-4 py-3 border border-slate-200 hover:border-brand-300 transition-colors cursor-pointer group"
                                 onclick="document.getElementById('email').value = '@item.Email'; document.getElementById('password').value = '@item.Password';">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg bg-brand-100 flex items-center justify-center text-brand-700 font-bold text-xs">
                                        @item.Role.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="font-medium text-slate-800 text-sm group-hover:text-brand-700 transition-colors">@item.Role</div>
                                        <div class="text-xs text-slate-500">@item.Email</div>
                                    </div>
                                </div>
                                <svg class="w-4 h-4 text-slate-300 group-hover:text-brand-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                </svg>
                            </div>
                        }
                    </div>
                </div>

                <!-- Footer -->
                <p class="mt-10 text-center text-sm text-slate-500">
                    Â© @DateTime.Now.Year KASAH Technologies. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</body>
</html>
