@page
@model KasahQMS.Web.Pages.Supervision.IndexModel
@{
    ViewData["Title"] = "Executive Supervision";
}

<div class="space-y-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-slate-900">Executive Supervision</h1>
            <p class="text-slate-500">Cross-departmental activity monitoring and employee engagement tracking.</p>
        </div>
        <div class="flex items-center gap-4">
            <div class="bg-emerald-50 px-4 py-2 rounded-xl border border-emerald-100 flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
                <span class="text-sm font-semibold text-emerald-800">@Model.ActiveUsersCount Active Users</span>
            </div>
        </div>
    </div>

    <!-- Login Activity Chart Placeholder/Summary -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
            <h2 class="text-lg font-semibold text-slate-900 mb-6 flex items-center gap-2">
                <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                Hourly Login Activity (Last 24h)
            </h2>
            
            <div class="relative h-64 flex items-end justify-between gap-1 px-2 border-b border-slate-100">
                @foreach (var dayHour in Enumerable.Range(0, 24))
                {
                    var hourData = Model.LoginByHour.FirstOrDefault(h => h.Hour == dayHour);
                    var count = hourData?.Count ?? 0;
                    var maxCount = Model.LoginByHour.Any() ? Model.LoginByHour.Max(h => h.Count) : 1;
                    var heightPercent = (count * 100) / (maxCount > 0 ? maxCount : 1);
                    
                    <div class="flex-1 group relative flex flex-col items-center">
                        <div class="w-full bg-brand-100 group-hover:bg-brand-200 rounded-t-sm transition-all duration-300" 
                             style="height: @(heightPercent > 0 ? heightPercent : 2)%;">
                             @if (count > 0)
                             {
                                 <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-slate-800 text-white text-[10px] px-1.5 py-0.5 rounded opacity-0 group-hover:opacity-100 transition-opacity z-10">
                                     @count
                                 </div>
                             }
                        </div>
                        <span class="text-[8px] text-slate-400 mt-2 rotate-45 origin-left">@dayHour:00</span>
                    </div>
                }
            </div>
            <div class="mt-8 text-xs text-slate-400 text-center uppercase tracking-widest">Login Frequency per Hour</div>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm overflow-hidden flex flex-col">
            <h2 class="text-lg font-semibold text-slate-900 mb-4">Top Actions</h2>
            <div class="space-y-4 flex-1">
                @foreach (var group in Model.RecentActivities.GroupBy(a => a.Action).OrderByDescending(g => g.Count()).Take(5))
                {
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-slate-600 truncate mr-2">@group.Key</span>
                        <span class="text-xs font-bold bg-slate-50 text-slate-800 px-2 py-1 rounded-lg">@group.Count()</span>
                    </div>
                    <div class="w-full h-1 bg-slate-50 rounded-full">
                        <div class="h-full bg-brand-500 rounded-full" style="width: @(group.Count() * 100 / Model.RecentActivities.Count)%"></div>
                    </div>
                }
            </div>
            <div class="mt-6 pt-4 border-t border-slate-50">
                <p class="text-[10px] text-slate-400 uppercase tracking-wider">Based on last 50 audit entries</p>
            </div>
        </div>
    </div>

    <!-- Recent Cross-Dept Activity Table -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-100 flex items-center justify-between">
            <h2 class="text-lg font-semibold text-slate-900">Live Activity Feed</h2>
            <button onclick="window.location.reload()" class="text-brand-600 hover:text-brand-700 text-sm font-medium">Refresh</button>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-slate-50 border-b border-slate-100">
                        <th class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Time</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">User</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Action</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Entity</th>
                        <th class="px-6 py-3 text-xs font-bold text-slate-500 uppercase tracking-wider">Description</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-50">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4 text-xs text-slate-500 whitespace-nowrap">@activity.Timestamp</td>
                                <td class="px-6 py-4">
                                    <span class="text-sm font-medium text-slate-900">@activity.UserName</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2 py-0.5 rounded text-[10px] font-bold uppercase tracking-wider bg-slate-100 text-slate-700">
                                        @activity.Action
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">@activity.Entity</td>
                                <td class="px-6 py-4 text-sm text-slate-500 truncate max-w-xs">@activity.Description</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center">
                                    <div class="w-12 h-12 rounded-full bg-slate-50 flex items-center justify-center mb-3">
                                        <svg class="w-6 h-6 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                                    </div>
                                    <h3 class="text-sm font-medium text-slate-900">No activity logged yet</h3>
                                    <p class="text-xs text-slate-500 mt-1 max-w-[200px]">System activity will appear here as users interact with the platform.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
