@page
@model KasahQMS.Web.Pages.Dashboard.StaffModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="space-y-8 animate-fade-in">
    <!-- Page Header -->
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-900 tracking-tight">My Dashboard</h1>
            <p class="mt-1 text-slate-500">Welcome back, @Model.DisplayName. Here's your work overview.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <a href="/Documents/Create"
               class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-brand-600 to-brand-700 text-white font-semibold rounded-xl hover:from-brand-700 hover:to-brand-800 transition-all shadow-lg shadow-brand-500/25 hover:shadow-brand-500/40 hover:shadow-xl">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                New Document
            </a>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid gap-5 sm:grid-cols-2 xl:grid-cols-4">
        @foreach (var stat in Model.Stats)
        {
            <div class="card p-6 card-hover">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-[11px] font-semibold uppercase tracking-wider text-slate-400">@stat.Title</p>
                        <p class="mt-3 text-3xl font-bold text-slate-900">@stat.Value</p>
                        <p class="mt-1 text-sm text-slate-500">@stat.Subtitle</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-100 to-brand-50 flex items-center justify-center">
                        <svg class="w-6 h-6 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.75" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                        </svg>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Tasks and Documents -->
    <div class="grid gap-6 xl:grid-cols-2">
        <!-- My Tasks -->
        <div class="card p-6">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">My Tasks</h2>
                    <p class="text-sm text-slate-500">Tasks assigned to you</p>
                </div>
                <a href="/Tasks" class="text-sm font-medium text-brand-600 hover:text-brand-700 transition-colors flex items-center gap-1">
                    View all
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
            <div class="space-y-3">
                @if (Model.Tasks.Any())
                {
                    @foreach (var task in Model.Tasks)
                    {
                        <div class="flex items-center justify-between rounded-xl border border-slate-200 px-5 py-4 hover:bg-slate-50 hover:border-brand-200 transition-all group">
                            <div class="flex items-center gap-4">
                                <div class="w-10 h-10 rounded-lg bg-brand-100 flex items-center justify-center text-brand-600 group-hover:bg-brand-600 group-hover:text-white transition-colors">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                                    </svg>
                                </div>
                                <div>
                                    <div class="font-semibold text-slate-800">@task.Title</div>
                                    <div class="text-sm text-slate-500">Due @task.DueDate</div>
                                </div>
                            </div>
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-slate-100 text-slate-600">
                                @task.Status
                            </span>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-8">
                        <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-slate-100 flex items-center justify-center">
                            <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                            </svg>
                        </div>
                        <p class="text-sm font-medium text-slate-600">No pending tasks</p>
                        <p class="text-xs text-slate-400 mt-1">You're all caught up!</p>
                    </div>
                }
            </div>
        </div>

        <!-- My Documents -->
        <div class="card p-6">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">My Documents</h2>
                    <p class="text-sm text-slate-500">Documents you created</p>
                </div>
                <a href="/Documents" class="text-sm font-medium text-brand-600 hover:text-brand-700 transition-colors flex items-center gap-1">
                    View all
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
            <div class="space-y-3">
                @if (Model.MyDocuments.Any())
                {
                    @foreach (var doc in Model.MyDocuments)
                    {
                        <div class="rounded-xl border border-slate-200 px-4 py-4 hover:bg-slate-50 hover:border-brand-200 transition-all">
                            <div class="font-semibold text-slate-800 text-sm">@doc.Title</div>
                            <div class="mt-1 flex items-center gap-2 text-xs text-slate-500">
                                <span>@doc.Number</span>
                                <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                                <span class="text-blue-600 font-medium">@doc.Status</span>
                                <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                                <span>@doc.Created</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-8">
                        <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-slate-100 flex items-center justify-center">
                            <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                        </div>
                        <p class="text-sm font-medium text-slate-600">No documents yet</p>
                        <p class="text-xs text-slate-400 mt-1">Create your first document</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Pending Approvals -->
    @if (Model.PendingApprovals.Any())
    {
        <div class="card p-6">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h2 class="text-lg font-semibold text-slate-900">Awaiting Approval</h2>
                    <p class="text-sm text-slate-500">Your submitted documents</p>
                </div>
                <a href="/Documents?status=pending" class="text-sm font-medium text-brand-600 hover:text-brand-700 transition-colors">
                    View all
                </a>
            </div>
            <div class="space-y-3">
                @foreach (var approval in Model.PendingApprovals)
                {
                    <div class="rounded-xl border border-slate-200 px-4 py-4 hover:bg-slate-50 hover:border-brand-200 transition-all">
                        <div class="font-semibold text-slate-800 text-sm">@approval.Title</div>
                        <div class="mt-1 flex items-center gap-2 text-xs text-slate-500">
                            <span>Submitted by @approval.Owner</span>
                            <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                            <span class="text-amber-600 font-medium">@approval.Stage</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

