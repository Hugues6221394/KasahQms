@page
@model KasahQMS.Web.Pages.Reports.PrintViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.ReportTitle - KasahQMS</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@media print {
            body { -webkit-print-color-adjust: exact; }
            .no-print { display: none !important; }
        }
    </style>
</head>
<body class="bg-white p-8">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8 border-b border-gray-200 pb-4">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white font-bold">Q</div>
                <div>
                    <h1 class="text-xl font-bold text-gray-900">KasahQMS</h1>
                    <p class="text-xs text-gray-500">Quality Management System</p>
                </div>
            </div>
            <div class="text-right">
                <h2 class="text-2xl font-bold text-gray-900">@Model.ReportTitle</h2>
                <p class="text-sm text-gray-500">Generated: @Model.GeneratedDate.ToString("g")</p>
            </div>
        </div>

        <!-- Controls -->
        <div class="mb-6 no-print flex justify-end gap-3">
            <button onclick="window.print()" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-blue-700 shadow-sm">
                Print / Save as PDF
            </button>
            <button onclick="window.close()" class="bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-semibold hover:bg-gray-200">
                Close
            </button>
        </div>

        <!-- content -->
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
                <thead>
                    <tr class="border-b-2 border-gray-100">
                        @if (Model.ReportData.Any())
                        {
                            foreach (var key in Model.ReportData.First().Keys)
                            {
                                <th class="py-3 px-4 font-semibold text-gray-900">@key</th>
                            }
                        }
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    @if (Model.ReportData.Any())
                    {
                        foreach (var row in Model.ReportData)
                        {
                            <tr class="hover:bg-gray-50/50">
                                @foreach (var val in row.Values)
                                {
                                    <td class="py-2.5 px-4 text-gray-600">@val</td>
                                }
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-8 text-center text-gray-500">No data found for this report period.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Footer -->
        <div class="mt-12 pt-4 border-t border-gray-100 flex justify-between text-xs text-gray-400">
            <p>Confidential - Internal Use Only</p>
            <p>Page 1 of 1</p>
        </div>
    </div>

    <script>
        // Auto-print option? Maybe annoying. Let user click.
    </script>
</body>
</html>
