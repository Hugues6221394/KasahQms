@page
@model KasahQMS.Web.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="space-y-8">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Reports</h1>
            <p class="text-sm text-slate-500">Export audit trails, compliance evidence, and KPIs.</p>
        </div>
        <div class="flex gap-3">
            <button class="rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700">Configure templates</button>
            <button class="rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white hover:bg-brand-700">Generate report</button>
        </div>
    </div>

    <div class="card p-6">
        <div class="flex flex-col gap-4 lg:flex-row lg:items-end">
            <div class="flex-1">
                <label class="text-sm font-medium text-slate-600">Search reports</label>
                <input class="mt-2 w-full rounded-lg border border-slate-200 px-4 py-2 text-sm" placeholder="Search by name, owner, or module" />
            </div>
            <div>
                <label class="text-sm font-medium text-slate-600">Report type</label>
                <select class="mt-2 w-48 rounded-lg border border-slate-200 px-3 py-2 text-sm">
                    <option>All</option>
                    <option>Compliance</option>
                    <option>Audit</option>
                    <option>CAPA</option>
                    <option>Document</option>
                </select>
            </div>
            <div>
                <label class="text-sm font-medium text-slate-600">Period</label>
                <select class="mt-2 w-40 rounded-lg border border-slate-200 px-3 py-2 text-sm">
                    <option>Last 30 days</option>
                    <option>Quarter to date</option>
                    <option>Year to date</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card p-6">
        <div class="overflow-hidden rounded-lg border border-slate-200">
            <table class="min-w-full divide-y divide-slate-200 text-sm">
                <thead class="bg-slate-50 text-slate-500 uppercase text-xs">
                    <tr>
                        <th class="px-4 py-3 text-left font-semibold">Report</th>
                        <th class="px-4 py-3 text-left font-semibold">Owner</th>
                        <th class="px-4 py-3 text-left font-semibold">Last run</th>
                        <th class="px-4 py-3 text-left font-semibold">Status</th>
                        <th class="px-4 py-3 text-right font-semibold">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-slate-100 bg-white">
                    @foreach (var report in Model.Reports)
                    {
                        <tr>
                            <td class="px-4 py-3">
                                <div class="font-semibold text-slate-800">@report.Title</div>
                                <div class="text-xs text-slate-500">@report.Description</div>
                            </td>
                            <td class="px-4 py-3 text-slate-600">@report.Owner</td>
                            <td class="px-4 py-3 text-slate-600">@report.LastRun</td>
                            <td class="px-4 py-3 text-slate-600">@report.Status</td>
                            <td class="px-4 py-3 text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a asp-page-handler="ExportExcel" asp-route-id="@report.Id" class="inline-flex items-center gap-1 rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600 hover:bg-slate-50 hover:text-green-700 transition-colors">
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                                        Excel
                                    </a>
                                    <a asp-page="PrintView" asp-route-id="@report.Id" target="_blank" class="inline-flex items-center gap-1 rounded-lg border border-slate-200 px-3 py-1.5 text-xs font-semibold text-slate-600 hover:bg-slate-50 hover:text-red-700 transition-colors">
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/></svg>
                                        PDF
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


