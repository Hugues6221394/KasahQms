@page
@model KasahQMS.Web.Pages.Audits.CreateModel
@{
    ViewData["Title"] = "Create Audit";
}

<div class="mx-auto max-w-3xl space-y-6">
    <nav class="flex items-center gap-2 text-sm text-slate-500">
        <a href="/Audits" class="hover:text-slate-900">Audits</a>
        <span>/</span>
        <span class="text-slate-700">New Audit</span>
    </nav>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <h1 class="text-xl font-bold text-slate-900 mb-6">Schedule New Audit</h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm flex items-center gap-2">
                <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>@Model.ErrorMessage</span>
            </div>
        }

        <form method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 gap-6">
                <!-- Title -->
                <div>
                    <label for="title" class="block text-sm font-medium text-slate-700 mb-1">Audit Title <span class="text-red-500">*</span></label>
                    <input type="text" id="title" name="Title" asp-for="Title" required
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                        placeholder="e.g., Q1 Internal Quality Audit">
                    <span asp-validation-for="Title" class="text-red-500 text-xs mt-1"></span>
                </div>

                <!-- Type & Lead Auditor -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="type" class="block text-sm font-medium text-slate-700 mb-1">Audit Type <span class="text-red-500">*</span></label>
                        <select id="type" name="AuditType" asp-for="AuditType" required
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="">Select type...</option>
                            <option value="Internal">Internal</option>
                            <option value="External">External</option>
                            <option value="Supplier">Supplier</option>
                        </select>
                        <span asp-validation-for="AuditType" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label for="leadAuditor" class="block text-sm font-medium text-slate-700 mb-1">Lead Auditor</label>
                        <select id="leadAuditor" name="LeadAuditorId" asp-for="LeadAuditorId"
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="">Select auditor...</option>
                            @foreach (var auditor in Model.Auditors)
                            {
                                <option value="@auditor.Id">@auditor.Name</option>
                            }
                        </select>
                        <p class="mt-1 text-xs text-slate-500">Only users with Auditor role are listed.</p>
                    </div>
                </div>

                <!-- Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="startDate" class="block text-sm font-medium text-slate-700 mb-1">Scheduled Start Date <span class="text-red-500">*</span></label>
                        <input type="date" id="startDate" name="ScheduledStartDate" asp-for="ScheduledStartDate" required
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                        <span asp-validation-for="ScheduledStartDate" class="text-red-500 text-xs mt-1"></span>
                    </div>
                    <div>
                        <label for="endDate" class="block text-sm font-medium text-slate-700 mb-1">Scheduled End Date <span class="text-red-500">*</span></label>
                        <input type="date" id="endDate" name="ScheduledEndDate" asp-for="ScheduledEndDate" required
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                        <span asp-validation-for="ScheduledEndDate" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <!-- Scope & Objectives -->
                <div>
                    <label for="scope" class="block text-sm font-medium text-slate-700 mb-1">Scope</label>
                    <textarea id="scope" name="Scope" asp-for="Scope" rows="3"
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                        placeholder="Define the boundaries of the audit..."></textarea>
                </div>

                <div>
                    <label for="objectives" class="block text-sm font-medium text-slate-700 mb-1">Objectives</label>
                    <textarea id="objectives" name="Objectives" asp-for="Objectives" rows="3"
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                        placeholder="State the purpose and goals..."></textarea>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-slate-700 mb-1">Additional Description</label>
                    <textarea id="description" name="Description" asp-for="Description" rows="2"
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                        placeholder="Any other details..."></textarea>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 pt-6 border-t border-slate-100">
                <a href="/Audits" class="px-4 py-2 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 bg-gradient-to-r from-brand-600 to-brand-700 text-white font-medium rounded-lg hover:from-brand-700 hover:to-brand-800 transition-all shadow-lg shadow-brand-500/25">
                    Schedule Audit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
