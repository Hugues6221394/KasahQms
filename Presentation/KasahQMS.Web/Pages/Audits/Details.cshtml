@page "{id:guid}"
@model KasahQMS.Web.Pages.Audits.DetailsModel
@{
    ViewData["Title"] = Model.Audit != null ? $"Audit: {Model.Audit.AuditNumber}" : "Audit Details";
}

<div class="space-y-6 animate-fade-in">
    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="card p-6 border-red-200 bg-red-50">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-red-100 flex items-center justify-center">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-red-800">Access Denied</h3>
                    <p class="text-sm text-red-600">@Model.ErrorMessage</p>
                </div>
            </div>
            <div class="mt-4">
                <a href="/Audits" class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Audits
                </a>
            </div>
        </div>
    }
    else if (Model.Audit != null)
    {
        <!-- Page Header -->
        <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
            <div class="flex items-start gap-4">
                <a href="/Audits" class="mt-1 p-2 rounded-lg bg-white border border-slate-200 text-slate-500 hover:bg-slate-50 hover:text-brand-600 transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                </a>
                <div>
                    <div class="flex items-center gap-3">
                        <span class="text-sm font-medium text-slate-500">@Model.Audit.AuditNumber</span>
                        <span class="px-2.5 py-0.5 rounded-full text-xs font-medium @Model.Audit.StatusClass">
                            @Model.Audit.Status
                        </span>
                    </div>
                    <h1 class="text-2xl lg:text-3xl font-bold text-slate-900 tracking-tight mt-1">@Model.Audit.Title</h1>
                    <p class="mt-1 text-slate-500">@Model.Audit.AuditType Audit</p>
                </div>
            </div>
            <div class="flex flex-wrap gap-3">
                @if (Model.CanEdit)
                {
                    <a href="/Audits/Edit/@Model.Audit.Id"
                       class="inline-flex items-center gap-2 px-4 py-2.5 bg-gradient-to-r from-brand-600 to-brand-700 text-white font-semibold rounded-xl hover:from-brand-700 hover:to-brand-800 transition-all shadow-lg shadow-brand-500/25">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Edit Audit
                    </a>
                }
                @if (!string.IsNullOrEmpty(Model.UserPermissionContext))
                {
                    <span class="inline-flex items-center gap-2 px-3 py-2 bg-slate-100 text-slate-600 text-sm rounded-lg">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        @Model.UserPermissionContext
                    </span>
                }
            </div>
        </div>

        <div class="grid gap-6 xl:grid-cols-3">
            <!-- Main Content -->
            <div class="xl:col-span-2 space-y-6">
                <!-- Audit Details Card -->
                <div class="card p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Audit Details</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Audit.Description))
                    {
                        <div class="mb-6">
                            <h3 class="text-sm font-medium text-slate-500 mb-2">Description</h3>
                            <p class="text-slate-700">@Model.Audit.Description</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Audit.Scope))
                    {
                        <div class="mb-6">
                            <h3 class="text-sm font-medium text-slate-500 mb-2">Scope</h3>
                            <p class="text-slate-700 whitespace-pre-line">@Model.Audit.Scope</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Audit.Objectives))
                    {
                        <div class="mb-6">
                            <h3 class="text-sm font-medium text-slate-500 mb-2">Objectives</h3>
                            <p class="text-slate-700 whitespace-pre-line">@Model.Audit.Objectives</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Audit.Conclusion))
                    {
                        <div class="p-4 rounded-xl bg-emerald-50 border border-emerald-200">
                            <h3 class="text-sm font-medium text-emerald-800 mb-2">Audit Conclusion</h3>
                            <p class="text-emerald-700 whitespace-pre-line">@Model.Audit.Conclusion</p>
                        </div>
                    }
                </div>

                <!-- Findings -->
                <div class="card p-6">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-slate-900">Findings (@Model.Findings.Count)</h2>
                    </div>

                    @if (Model.Findings.Any())
                    {
                        <div class="space-y-4">
                            @foreach (var finding in Model.Findings)
                            {
                                <div class="border border-slate-200 rounded-xl p-4 hover:border-brand-200 transition-colors">
                                    <div class="flex items-start justify-between gap-4">
                                        <div class="flex-1">
                                            <div class="flex items-center gap-2 mb-2">
                                                <span class="text-sm font-medium text-slate-500">@finding.FindingNumber</span>
                                                <span class="px-2 py-0.5 rounded-full text-xs font-medium @finding.SeverityClass">
                                                    @finding.Severity
                                                </span>
                                                <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-600">
                                                    @finding.Status
                                                </span>
                                                @if (finding.HasLinkedCapa)
                                                {
                                                    <span class="px-2 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-700">
                                                        CAPA Linked
                                                    </span>
                                                }
                                            </div>
                                            <h4 class="font-semibold text-slate-800">@finding.Title</h4>
                                            <p class="text-sm text-slate-600 mt-1">@finding.Description</p>
                                            
                                            @if (!string.IsNullOrEmpty(finding.Clause))
                                            {
                                                <div class="mt-2 text-sm">
                                                    <span class="text-slate-500">Clause:</span>
                                                    <span class="text-slate-700 font-medium">@finding.Clause</span>
                                                </div>
                                            }
                                            
                                            <div class="mt-3 flex flex-wrap gap-4 text-xs text-slate-500">
                                                <span>Identified by @finding.IdentifiedByName</span>
                                                <span>@finding.IdentifiedAt.ToString("MMM dd, yyyy")</span>
                                                @if (!string.IsNullOrEmpty(finding.ResponsibleUserName))
                                                {
                                                    <span>Assigned to @finding.ResponsibleUserName</span>
                                                }
                                                @if (finding.ResponseDueDate.HasValue)
                                                {
                                                    <span class="@(finding.ResponseDueDate < DateTime.UtcNow ? "text-red-600 font-medium" : "")">
                                                        Due @finding.ResponseDueDate.Value.ToString("MMM dd, yyyy")
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(finding.Response))
                                    {
                                        <div class="mt-3 p-3 rounded-lg bg-slate-50 border border-slate-100">
                                            <h5 class="text-xs font-medium text-slate-500 mb-1">Response</h5>
                                            <p class="text-sm text-slate-700">@finding.Response</p>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8">
                            <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-slate-100 flex items-center justify-center">
                                <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                                </svg>
                            </div>
                            <p class="text-sm font-medium text-slate-600">No findings recorded</p>
                            <p class="text-xs text-slate-400 mt-1">Findings will appear here once documented</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Schedule Info -->
                <div class="card p-6">
                    <h3 class="text-sm font-semibold text-slate-900 mb-4">Schedule</h3>
                    <div class="space-y-4">
                        <div>
                            <div class="text-xs text-slate-500 mb-1">Planned Period</div>
                            <div class="text-sm font-medium text-slate-700">
                                @Model.Audit.PlannedStartDate.ToString("MMM dd") - @Model.Audit.PlannedEndDate.ToString("MMM dd, yyyy")
                            </div>
                        </div>
                        @if (Model.Audit.ActualStartDate.HasValue)
                        {
                            <div>
                                <div class="text-xs text-slate-500 mb-1">Actual Start</div>
                                <div class="text-sm font-medium text-slate-700">@Model.Audit.ActualStartDate.Value.ToString("MMM dd, yyyy")</div>
                            </div>
                        }
                        @if (Model.Audit.ActualEndDate.HasValue)
                        {
                            <div>
                                <div class="text-xs text-slate-500 mb-1">Actual End</div>
                                <div class="text-sm font-medium text-slate-700">@Model.Audit.ActualEndDate.Value.ToString("MMM dd, yyyy")</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Lead Auditor -->
                <div class="card p-6">
                    <h3 class="text-sm font-semibold text-slate-900 mb-4">Lead Auditor</h3>
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-brand-100 flex items-center justify-center text-brand-600 font-semibold">
                            @(Model.Audit.LeadAuditorName.Length > 0 ? Model.Audit.LeadAuditorName[0].ToString().ToUpper() : "?")
                        </div>
                        <div>
                            <div class="font-medium text-slate-800">@Model.Audit.LeadAuditorName</div>
                            <div class="text-xs text-slate-500">Lead Auditor</div>
                        </div>
                    </div>
                </div>

                <!-- Team Members -->
                @if (Model.TeamMembers.Any())
                {
                    <div class="card p-6">
                        <h3 class="text-sm font-semibold text-slate-900 mb-4">Audit Team (@Model.TeamMembers.Count)</h3>
                        <div class="space-y-3">
                            @foreach (var member in Model.TeamMembers)
                            {
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-slate-600 text-sm font-medium">
                                        @(member.Name.Length > 0 ? member.Name[0].ToString().ToUpper() : "?")
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-slate-700">@member.Name</div>
                                        <div class="text-xs text-slate-500">@member.Role</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- Metadata -->
                <div class="card p-6">
                    <h3 class="text-sm font-semibold text-slate-900 mb-4">Information</h3>
                    <div class="space-y-3 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-500">Audit Type</span>
                            <span class="text-slate-700 font-medium">@Model.Audit.AuditType</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-500">Status</span>
                            <span class="px-2 py-0.5 rounded-full text-xs font-medium @Model.Audit.StatusClass">@Model.Audit.Status</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-500">Created</span>
                            <span class="text-slate-700">@Model.Audit.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>

                <!-- Audit Integrity Notice -->
                <div class="p-4 rounded-xl bg-amber-50 border border-amber-200">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-amber-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                        </svg>
                        <div>
                            <h4 class="text-sm font-medium text-amber-800">Audit Integrity</h4>
                            <p class="text-xs text-amber-700 mt-1">Audit history is immutable and protected. All changes are logged for compliance purposes.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
