@page
@model KasahQMS.Web.Pages.Audits.IndexModel
@{
    ViewData["Title"] = "Audits";
}

<div class="py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- Page Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-slate-900">Audits</h1>
                <p class="mt-2 text-slate-600">@(Model.IsAuditor ? "View and execute assigned audits" : "Manage internal and external quality audits")</p>
            </div>
            @if (Model.CanScheduleAudit)
            {
                <div class="mt-4 sm:mt-0 flex space-x-3">
                    <a href="/Audits/Schedule" 
                       class="inline-flex items-center px-4 py-2 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        View Schedule
                    </a>
                    <a href="/Audits/Create" 
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-qms-600 to-qms-700 text-white font-medium rounded-lg hover:from-qms-700 hover:to-qms-800 transition-all shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        New Audit
                    </a>
                </div>
            }
            else if (Model.IsAuditor)
            {
                <div class="mt-4 sm:mt-0">
                    <span class="inline-flex items-center px-4 py-2 bg-blue-50 text-blue-700 text-sm font-medium rounded-lg border border-blue-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Auditor View - Execute assigned audits
                    </span>
                </div>
            }
        </div>

        <!-- Audit Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <a href="/Audits?status=Planned" class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 flex items-center hover:border-brand-300 hover:shadow-md transition-all cursor-pointer group">
                <div class="p-3 bg-brand-100 rounded-lg group-hover:bg-brand-600 transition-colors">
                    <svg class="w-6 h-6 text-brand-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-2xl font-bold text-slate-900 group-hover:text-brand-600 transition-colors">@Model.PlannedCount</p>
                    <p class="text-sm text-slate-500">Planned</p>
                </div>
            </a>
            <a href="/Audits?status=InProgress" class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 flex items-center hover:border-amber-300 hover:shadow-md transition-all cursor-pointer group">
                <div class="p-3 bg-amber-100 rounded-lg group-hover:bg-amber-600 transition-colors">
                    <svg class="w-6 h-6 text-amber-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-2xl font-bold text-slate-900 group-hover:text-amber-600 transition-colors">@Model.InProgressCount</p>
                    <p class="text-sm text-slate-500">In Progress</p>
                </div>
            </a>
            <a href="/Audits?status=Completed" class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 flex items-center hover:border-emerald-300 hover:shadow-md transition-all cursor-pointer group">
                <div class="p-3 bg-emerald-100 rounded-lg group-hover:bg-emerald-600 transition-colors">
                    <svg class="w-6 h-6 text-emerald-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-2xl font-bold text-slate-900 group-hover:text-emerald-600 transition-colors">@Model.CompletedCount</p>
                    <p class="text-sm text-slate-500">Completed</p>
                </div>
            </a>
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 flex items-center">
                <div class="p-3 bg-red-100 rounded-lg">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-2xl font-bold text-slate-900">@Model.OpenFindingsCount</p>
                    <p class="text-sm text-slate-500">Open Findings</p>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 mb-6">
            <form method="get" class="flex flex-wrap gap-4 items-end">
                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Search</label>
                    <input type="search" name="search" value="@Model.SearchTerm"
                        placeholder="Search audits..."
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                </div>
                <div class="w-40">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Status</label>
                    <select name="status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                        <option value="">All</option>
                        <option value="Planned">Planned</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>
                <div class="w-40">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Type</label>
                    <select name="type" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                        <option value="">All</option>
                        <option value="Internal">Internal</option>
                        <option value="External">External</option>
                        <option value="Supplier">Supplier</option>
                    </select>
                </div>
                <button type="submit" 
                    class="px-4 py-2 bg-qms-600 text-white font-medium rounded-lg hover:bg-qms-700 transition-colors">
                    Filter
                </button>
            </form>
        </div>

        <!-- Audits List -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            @if (Model.Audits.Any())
            {
                <table class="min-w-full divide-y divide-slate-200">
                    <thead class="bg-slate-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Audit</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Type</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Lead Auditor</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Date</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Findings</th>
                            <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-slate-100">
                        @foreach (var audit in Model.Audits)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div>
                                        <div class="text-sm font-medium text-slate-900">@audit.Title</div>
                                        <div class="text-sm text-slate-500">@audit.Number</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(audit.Type == "Internal" ? "bg-brand-100 text-brand-800" : audit.Type == "Supplier" ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                        @audit.Type
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @audit.StatusClass">
                                        @audit.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">@audit.LeadAuditor</td>
                                <td class="px-6 py-4 text-sm text-slate-500">@audit.DateRange</td>
                                <td class="px-6 py-4">
                                    @if (audit.Findings > 0)
                                    {
                                        <span class="text-sm font-medium text-slate-900">@audit.Findings</span>
                                        <span class="text-sm text-slate-500">(@audit.MajorFindings major)</span>
                                    }
                                    else
                                    {
                                        <span class="text-sm text-slate-500">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <a href="/Audits/Details/@audit.Id" class="text-brand-600 hover:text-brand-700 text-sm font-medium">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                <div class="px-6 py-4 border-t border-slate-200 flex items-center justify-between">
                    <div class="text-sm text-slate-500">
                        Showing <span class="font-medium">@Model.Audits.Count</span> audits
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-slate-100 flex items-center justify-center">
                        <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                        </svg>
                    </div>
                    <h3 class="text-lg font-medium text-slate-900 mb-1">No audits found</h3>
                    <p class="text-sm text-slate-500 mb-4">Get started by scheduling a new audit.</p>
                    <a href="/Audits/Create" class="inline-flex items-center px-4 py-2 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700 transition-colors">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        Schedule Audit
                    </a>
                </div>
            }
        </div>
    </div>
</div>

