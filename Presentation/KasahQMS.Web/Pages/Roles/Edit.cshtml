@page
@model KasahQMS.Web.Pages.Roles.EditModel
@{
    ViewData["Title"] = "Edit Role";
}

<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">Edit role</h1>
        <p class="text-sm text-slate-500">Update permission scope and constraints.</p>
    </div>

    <form method="post" class="card p-6 space-y-6">
        <input type="hidden" asp-for="Id" />
        <div class="grid gap-4 md:grid-cols-2">
            <div>
                <label class="form-label">Role name</label>
                <input class="form-input" asp-for="Name" />
            </div>
            <div>
                <label class="form-label">Description</label>
                <input class="form-input" asp-for="Description" />
            </div>
        </div>

        <div>
            <div class="text-sm font-semibold text-slate-700">Permissions</div>
            <div class="mt-3 grid gap-2 md:grid-cols-3">
                @foreach (var perm in Model.AllPermissions)
                {
                    <label class="flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600">
                        <input type="checkbox" name="SelectedPermissions" value="@perm" class="h-4 w-4 rounded border-slate-300 text-brand-600"
                               @(Model.SelectedPermissions.Contains(perm) ? "checked" : "") />
                        <span>@perm</span>
                    </label>
                }
            </div>
        </div>

        <div class="flex items-center gap-3">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="/Roles" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
