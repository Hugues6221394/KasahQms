@page
@model KasahQMS.Web.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Roles";
}

<div class="space-y-8">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Roles & permissions</h1>
            <p class="text-sm text-slate-500">Define least-privilege access for every actor.</p>
        </div>
        <a href="/Roles/Create" class="rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white hover:bg-brand-700">Create role</a>
    </div>

    <div class="grid gap-5 lg:grid-cols-2">
        @foreach (var role in Model.Roles)
        {
            <div class="card p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-semibold text-slate-900">@role.Name</h2>
                        <p class="text-xs text-slate-500">@role.Description</p>
                    </div>
                    <a href="/Roles/Edit?id=@role.Id" class="rounded-lg border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 hover:border-brand-300">Edit</a>
                </div>
                <div class="mt-4">
                    <div class="text-xs uppercase tracking-wide text-slate-400 mb-2">Permissions</div>
                    <div class="flex flex-wrap gap-2">
                        @foreach (var perm in role.Permissions)
                        {
                            <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600">@perm</span>
                        }
                    </div>
                </div>
                <div class="mt-5">
                    <div class="text-xs uppercase tracking-wide text-slate-400 mb-2">Policy constraints (PBAC)</div>
                    @if (role.Policies.Any())
                    {
                        <div class="space-y-2">
                            @foreach (var policy in role.Policies)
                            {
                                <div class="rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-xs text-slate-600">
                                    <span class="font-semibold text-slate-700">@policy.Name</span> â€” @policy.Rule
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-xs text-slate-500">No policy constraints assigned.</div>
                    }
                </div>
            </div>
        }
    </div>
</div>


