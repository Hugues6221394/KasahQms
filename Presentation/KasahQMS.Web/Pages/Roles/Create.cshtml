@page
@model KasahQMS.Web.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">Create role</h1>
        <p class="text-sm text-slate-500">Define permissions and policy scope for the role.</p>
    </div>

    <form method="post" class="card p-6 space-y-6">
        <div class="grid gap-4 md:grid-cols-2">
            <div>
                <label class="form-label">Role name</label>
                <input class="form-input" asp-for="Name" />
            </div>
            <div>
                <label class="form-label">Description</label>
                <input class="form-input" asp-for="Description" />
            </div>
        </div>

        <div>
            <div class="text-sm font-semibold text-slate-700 mb-3">Permissions</div>
            @foreach (var group in Model.PermissionGroups)
            {
                <div class="mb-4">
                    <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-2">@group.Key</div>
                    <div class="grid gap-2 md:grid-cols-3">
                        @foreach (var perm in group.Value)
                        {
                            <label class="flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600 hover:bg-slate-50">
                                <input type="checkbox" name="SelectedPermissions" value="@perm.Name" class="h-4 w-4 rounded border-slate-300 text-brand-600" />
                                <span title="@perm.Description">@perm.Name</span>
                            </label>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="flex items-center gap-3">
            <button type="submit" class="btn btn-primary">Create role</button>
            <a href="/Roles" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
