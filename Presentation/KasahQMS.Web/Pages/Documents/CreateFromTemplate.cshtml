@page "{id:guid}"
@model KasahQMS.Web.Pages.Documents.CreateFromTemplateModel
@{
    ViewData["Title"] = "Use Template";
}

<div class="space-y-6">
    <nav class="flex items-center gap-2 text-sm text-slate-500">
        <a href="/Dashboard" class="hover:text-slate-900">Dashboard</a>
        <span>/</span>
        <a href="/Templates" class="hover:text-slate-900">Templates</a>
        <span>/</span>
        <span class="text-slate-700">Use Template</span>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-4 bg-red-50 border border-red-200 rounded-xl text-red-700 flex items-center gap-3">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span>@Model.ErrorMessage</span>
        </div>
    }
    else if (Model.Template != null)
    {
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">Edit & Share Document</h1>
                <p class="text-sm text-slate-500">Edit the template content and share with your recipient. The original template remains unchanged.</p>
            </div>
            <div class="flex gap-2">
                <form method="post" asp-page-handler="Export" class="inline">
                    <input type="hidden" name="TemplateId" value="@Model.TemplateId" />
                    <input type="hidden" name="Title" id="export-title" value="@Model.Title" />
                    <input type="hidden" name="EditedContent" id="export-content" value="@Model.EditedContent" />
                    <button type="submit" onclick="prepareExport()" class="inline-flex items-center px-4 py-2 border border-slate-300 text-slate-700 text-sm font-medium rounded-lg hover:bg-slate-50">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/></svg>
                        Export to Local
                    </button>
                </form>
            </div>
        </div>

        <!-- Template Info Card -->
        <div class="bg-gradient-to-r from-brand-50 to-emerald-50 rounded-xl border border-brand-200 p-4">
            <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-lg bg-brand-100 text-brand-600 flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                        <span class="text-xs font-medium text-brand-600 bg-brand-100 px-2 py-0.5 rounded">Template</span>
                        <span class="text-xs text-slate-500">@Model.Template.DocumentNumber</span>
                    </div>
                    <h3 class="font-semibold text-slate-900">@Model.Template.Title</h3>
                    @if (!string.IsNullOrEmpty(Model.Template.Description))
                    {
                        <p class="text-sm text-slate-600 mt-1">@Model.Template.Description</p>
                    }
                    <div class="flex items-center gap-4 mt-2 text-xs text-slate-500">
                        <span>Type: @Model.Template.DocumentType</span>
                        @if (!string.IsNullOrEmpty(Model.Template.OriginalFileName))
                        {
                            <span class="flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"/></svg>
                                @Model.Template.OriginalFileName
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="TemplateId" />
            
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Main Editor Panel -->
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                        <h2 class="text-lg font-semibold text-slate-900 mb-4">Document Details</h2>
                        
                        <div class="space-y-4">
                            <div>
                                <label asp-for="Title" class="block text-sm font-medium text-slate-700 mb-1">Document Title <span class="text-red-500">*</span></label>
                                <input type="text" asp-for="Title" class="w-full rounded-lg border border-slate-300 px-4 py-2 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Enter document title" />
                                <span asp-validation-for="Title" class="text-sm text-red-600"></span>
                            </div>
                            
                            <div>
                                <label asp-for="Description" class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                                <textarea asp-for="Description" rows="2" class="w-full rounded-lg border border-slate-300 px-4 py-2 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Brief description of this document"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Content Editor -->
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-slate-900">Edit Content</h2>
                            <div class="flex items-center gap-2">
                                <button type="button" onclick="formatText('bold')" class="p-2 text-slate-600 hover:bg-slate-100 rounded" title="Bold">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path d="M6 4h8a4 4 0 014 4 4 4 0 01-4 4H6z"/><path d="M6 12h9a4 4 0 014 4 4 4 0 01-4 4H6z"/></svg>
                                </button>
                                <button type="button" onclick="formatText('italic')" class="p-2 text-slate-600 hover:bg-slate-100 rounded" title="Italic">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M19 4h-9m4 16H5m9-16l-4 16"/></svg>
                                </button>
                                <button type="button" onclick="formatText('underline')" class="p-2 text-slate-600 hover:bg-slate-100 rounded" title="Underline">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M6 3v7a6 6 0 006 6 6 6 0 006-6V3M4 21h16"/></svg>
                                </button>
                                <span class="w-px h-6 bg-slate-200"></span>
                                <button type="button" onclick="insertList('ul')" class="p-2 text-slate-600 hover:bg-slate-100 rounded" title="Bullet List">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M8 6h13M8 12h13M8 18h13M3 6h.01M3 12h.01M3 18h.01"/></svg>
                                </button>
                                <button type="button" onclick="insertList('ol')" class="p-2 text-slate-600 hover:bg-slate-100 rounded" title="Numbered List">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M10 6h11M10 12h11M10 18h11M4 6h1v4M4 10h2M6 18H4c0-1 2-2 2-3s-1-1.5-2-1"/></svg>
                                </button>
                            </div>
                        </div>
                        
                        <div id="content-editor" contenteditable="true" class="min-h-[400px] max-h-[600px] overflow-y-auto rounded-lg border border-slate-300 p-4 focus:ring-2 focus:ring-brand-500 focus:border-brand-500 prose prose-sm max-w-none">
                            @Html.Raw(Model.EditedContent ?? Model.Template.Content ?? "<p>Start typing your content here...</p>")
                        </div>
                        <textarea asp-for="EditedContent" id="edited-content-hidden" class="hidden"></textarea>
                        
                        <p class="text-xs text-slate-400 mt-2">
                            <strong>Note:</strong> Your edits will be saved to the new document. The original template remains unchanged.
                        </p>
                    </div>
                </div>

                <!-- Sidebar - Share Options -->
                <div class="space-y-6">
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                        <h2 class="text-lg font-semibold text-slate-900 mb-4">Share Document</h2>
                        
                        <div class="space-y-4">
                            @if (Model.CanShareToDepartment)
                            {
                                <div>
                                    <label asp-for="TargetDepartmentId" class="block text-sm font-medium text-slate-700 mb-1">Send to Department</label>
                                    <select asp-for="TargetDepartmentId" class="w-full rounded-lg border border-slate-300 px-4 py-2 focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                                        <option value="">— Select Department —</option>
                                        @foreach (var dept in Model.Departments)
                                        {
                                            <option value="@dept.Id">@dept.Name</option>
                                        }
                                    </select>
                                    <p class="text-xs text-slate-400 mt-1">All members of this department will receive access</p>
                                </div>
                                
                                <div class="text-center text-sm text-slate-400">— OR —</div>
                            }
                            
                            <div>
                                <label asp-for="TargetUserId" class="block text-sm font-medium text-slate-700 mb-1">Send to Person</label>
                                <select asp-for="TargetUserId" class="w-full rounded-lg border border-slate-300 px-4 py-2 focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                                    <option value="">— Select Person —</option>
                                    @foreach (var user in Model.Users)
                                    {
                                        <option value="@user.Id">@user.Name — @user.Department</option>
                                    }
                                </select>
                                <p class="text-xs text-slate-400 mt-1">Only this person will receive access</p>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                        <h2 class="text-lg font-semibold text-slate-900 mb-4">Actions</h2>
                        
                        <div class="space-y-3">
                            <button type="submit" onclick="syncContent()" class="w-full px-4 py-3 bg-brand-600 text-white font-semibold rounded-lg hover:bg-brand-700 transition-colors flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                                Create & Share Document
                            </button>
                            
                            <a href="/Templates" class="w-full px-4 py-3 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50 transition-colors flex items-center justify-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                                Back to Templates
                            </a>
                        </div>
                    </div>

                    <!-- Template File -->
                    @if (!string.IsNullOrEmpty(Model.Template.FilePath))
                    {
                        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                            <h2 class="text-lg font-semibold text-slate-900 mb-4">Attached File</h2>
                            <div class="flex items-center gap-3 p-3 bg-slate-50 rounded-lg">
                                <div class="w-10 h-10 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/></svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="text-sm font-medium text-slate-900 truncate">@Model.Template.OriginalFileName</div>
                                    <a href="@Model.Template.FilePath" target="_blank" class="text-xs text-brand-600 hover:text-brand-700">Download</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </form>
    }
</div>

@section Scripts {
    <script>
    function syncContent() {
        var editor = document.getElementById('content-editor');
        var hidden = document.getElementById('edited-content-hidden');
        if (editor && hidden) {
            hidden.value = editor.innerHTML;
        }
    }
    
    function prepareExport() {
        syncContent();
        document.getElementById('export-title').value = document.querySelector('[name="Title"]').value;
        document.getElementById('export-content').value = document.getElementById('content-editor').innerHTML;
    }
    
    function formatText(command) {
        document.execCommand(command, false, null);
        document.getElementById('content-editor').focus();
    }
    
    function insertList(type) {
        document.execCommand(type === 'ol' ? 'insertOrderedList' : 'insertUnorderedList', false, null);
        document.getElementById('content-editor').focus();
    }
    
    // Auto-sync content when form is about to submit
    document.querySelector('form')?.addEventListener('submit', function() {
        syncContent();
    });
    </script>
}
