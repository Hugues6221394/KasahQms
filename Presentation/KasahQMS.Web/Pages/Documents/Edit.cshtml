@page "{id:Guid}"
@model KasahQMS.Web.Pages.Documents.EditModel
@{
    ViewData["Title"] = "Edit Document";
}

<div class="mx-auto max-w-3xl space-y-6">
    <nav class="flex items-center gap-2 text-sm text-slate-500">
        <a href="/Documents" class="hover:text-slate-900">Documents</a>
        <span>/</span>
        <a href="/Documents/Details/@Model.DocumentId" class="hover:text-slate-900">@Model.DocumentNumber</a>
        <span>/</span>
        <span class="text-slate-700">Edit</span>
    </nav>

    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-xl font-bold text-slate-900">Edit Document</h1>
                <p class="text-sm text-slate-500">@Model.DocumentNumber • Status: @Model.Status</p>
            </div>
            @if (Model.CanEdit && (Model.IsTmdOrDeputy || Model.Status == "Draft"))
            {
                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this document? This action cannot be undone.');">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="DocumentId" />
                    <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        Delete
                    </button>
                </form>
            }
        </div>

        @if (!Model.CanEdit)
        {
            <div class="mb-4 p-4 bg-amber-50 border border-amber-200 rounded-lg text-amber-700 text-sm">
                @(Model.ErrorMessage ?? "You cannot edit this document.")
            </div>
            <a href="/Documents/Details/@Model.DocumentId" class="px-4 py-2 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50">
                Back to Document
            </a>
        }
        else
        {
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
                    @Model.ErrorMessage
                </div>
            }

            <form method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="DocumentId" />

                <div>
                    <label for="title" class="block text-sm font-medium text-slate-700 mb-1">Title <span class="text-red-500">*</span></label>
                    <input type="text" id="title" asp-for="Title" required
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                    <span asp-validation-for="Title" class="text-sm text-red-500"></span>
                </div>

                <div>
                    <label for="description" class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                    <textarea id="description" asp-for="Description" rows="3"
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500"
                        placeholder="Brief description of the document..."></textarea>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="documentType" class="block text-sm font-medium text-slate-700 mb-1">Document Type</label>
                        <select id="documentType" asp-for="DocumentTypeId"
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="">— Select Type —</option>
                            @foreach (var type in Model.DocumentTypes)
                            {
                                <option value="@type.Id" selected="@(Model.DocumentTypeId == type.Id)">@type.Name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label for="category" class="block text-sm font-medium text-slate-700 mb-1">Category</label>
                        <select id="category" asp-for="CategoryId"
                            class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="">— Select Category —</option>
                            @foreach (var cat in Model.Categories)
                            {
                                <option value="@cat.Id" selected="@(Model.CategoryId == cat.Id)">@cat.Name</option>
                            }
                        </select>
                    </div>
                </div>

                @if (Model.IsTmdOrDeputy)
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="targetDepartment" class="block text-sm font-medium text-slate-700 mb-1">Send to Department</label>
                            <select id="targetDepartment" asp-for="TargetDepartmentId"
                                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                                <option value="">— All Departments —</option>
                                @foreach (var dept in Model.Departments)
                                {
                                    <option value="@dept.Id" selected="@(Model.TargetDepartmentId == dept.Id)">@dept.Name</option>
                                }
                            </select>
                            <p class="mt-1 text-xs text-slate-500">Optionally restrict visibility to a specific department</p>
                        </div>
                        <div>
                            <label for="targetUser" class="block text-sm font-medium text-slate-700 mb-1">Send to User</label>
                            <select id="targetUser" asp-for="TargetUserId"
                                class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                                <option value="">— Select User —</option>
                                @foreach (var u in Model.Users)
                                {
                                    <option value="@u.Id" selected="@(Model.TargetUserId == u.Id)">@u.Name — @u.Department</option>
                                }
                            </select>
                            <p class="mt-1 text-xs text-slate-500">Optionally send directly to a specific user</p>
                        </div>
                    </div>
                }

                <div>
                    <label for="content" class="block text-sm font-medium text-slate-700 mb-1">Content</label>
                    <textarea id="content" asp-for="Content" rows="12"
                        class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 font-mono text-sm"
                        placeholder="Document content..."></textarea>
                </div>

                <div class="flex gap-3 pt-4 border-t border-slate-200">
                    <button type="submit" class="px-6 py-2 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700">
                        Save Changes
                    </button>
                    <a href="/Documents/Details/@Model.DocumentId" class="px-6 py-2 border border-slate-300 text-slate-700 font-medium rounded-lg hover:bg-slate-50">
                        Cancel
                    </a>
                </div>
            </form>
        }
    </div>
</div>
