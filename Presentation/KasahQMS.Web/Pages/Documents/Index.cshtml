@page
@model KasahQMS.Web.Pages.Documents.IndexModel
@{
    ViewData["Title"] = "Documents";
}

<div class="py-8">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        @if (Model.UserRoleContext == "Auditor")
        {
            <!-- Read-Only Banner -->
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 mb-6">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center flex-shrink-0">
                        <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-amber-900">Auditor Read-Only Mode</h3>
                        <p class="text-sm text-amber-700">You have view-only access to all documents. You cannot create, modify, or delete any records.</p>
                    </div>
                </div>
            </div>
        }
        <!-- Page Header -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-slate-900">Documents</h1>
                <p class="mt-2 text-slate-600">
                    @if (Model.UserRoleContext == "Staff")
                    {
                        <text>Your documents and department documents</text>
                    }
                    else if (Model.UserRoleContext == "Manager")
                    {
                        <text>Documents from you and your team</text>
                    }
                    else if (Model.UserRoleContext == "Auditor")
                    {
                        <text>Document overview for audit purposes (read-only)</text>
                    }
                    else
                    {
                        <text>Manage your quality documents, policies, and procedures</text>
                    }
                </p>
            </div>
            @if (Model.CanCreateDocument)
            {
                <div class="mt-4 sm:mt-0">
                    <a href="/Documents/Create" 
                       class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-qms-600 to-qms-700 text-white font-medium rounded-lg hover:from-qms-700 hover:to-qms-800 transition-all shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        New Document
                    </a>
                </div>
            }
        </div>

        <!-- Filters -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-4 mb-6">
            <form method="get" class="flex flex-wrap gap-4 items-end">
                <div class="flex-1 min-w-[200px]">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Search</label>
                    <div class="relative">
                        <input type="search" name="search" value="@Model.SearchTerm"
                            placeholder="Search documents..."
                            class="w-full pl-10 pr-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                        <svg class="absolute left-3 top-2.5 h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                    </div>
                </div>
                <div class="w-48">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Status</label>
                    <select name="status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                        <option value="">All Statuses</option>
                        <option value="Draft">Draft</option>
                        <option value="Submitted">Submitted</option>
                        <option value="InReview">In Review</option>
                        <option value="Approved">Approved</option>
                        <option value="Archived">Archived</option>
                    </select>
                </div>
                <div class="w-48">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Type</label>
                    <select name="type" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-qms-500 focus:border-qms-500">
                        <option value="">All Types</option>
                        @foreach (var type in Model.DocumentTypes)
                        {
                            <option value="@type.Name">@type.Name</option>
                        }
                    </select>
                </div>
                <button type="submit" 
                    class="px-4 py-2 bg-qms-600 text-white font-medium rounded-lg hover:bg-qms-700 transition-colors">
                    Filter
                </button>
                <a href="/Documents" class="px-4 py-2 text-slate-600 hover:text-slate-800 font-medium">
                    Clear
                </a>
            </form>
        </div>

        <!-- Documents Table -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
            <table class="min-w-full divide-y divide-slate-200">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Document
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Type
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Status
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Version
                        </th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Modified
                        </th>
                        <th class="px-6 py-4 text-right text-xs font-semibold text-slate-600 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-100">
                    @if (!Model.Documents.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-8 text-center text-sm text-slate-500">
                                No documents found for the selected filters.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var doc in Model.Documents)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-qms-100 rounded-lg flex items-center justify-center">
                                            <svg class="w-5 h-5 text-qms-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                            </svg>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-slate-900">@doc.Title</div>
                                            <div class="text-sm text-slate-500">@doc.Number</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-sm text-slate-600">@doc.Type</span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @doc.StatusClass">
                                        @doc.Status
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-slate-600">@doc.Version</td>
                                <td class="px-6 py-4 text-sm text-slate-500">@doc.ModifiedAt</td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex items-center justify-end space-x-2">
                                        <a asp-page="/Documents/Details" asp-route-id="@doc.Id" class="p-2 text-slate-400 hover:text-qms-600 transition-colors" title="View">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                            </svg>
                                        </a>
                                        @if (Model.UserRoleContext != "Auditor" && doc.Status == "Draft")
                                        {
                                            <a asp-page="/Documents/Edit" asp-route-id="@doc.Id" class="p-2 text-slate-400 hover:text-qms-600 transition-colors" title="Edit">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                </svg>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-slate-200 flex items-center justify-between">
                @{
                    var start = Model.TotalItems == 0 ? 0 : (Model.CurrentPage - 1) * Model.PageSize + 1;
                    var end = Math.Min(Model.TotalItems, Model.CurrentPage * Model.PageSize);
                }
                <div class="text-sm text-slate-500">
                    Showing <span class="font-medium">@start</span> to <span class="font-medium">@end</span> of <span class="font-medium">@Model.TotalItems</span> results
                </div>
                <nav class="flex items-center space-x-2">
                    <a class="px-3 py-2 text-sm text-slate-500 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors @(Model.CurrentPage <= 1 ? "pointer-events-none opacity-50" : "")"
                       href="?page=@(Model.CurrentPage - 1)&search=@Model.SearchTerm&status=@Model.Status&type=@Model.Type">
                        Previous
                    </a>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {
                        <a class="px-3 py-2 text-sm rounded-lg @(i == Model.CurrentPage ? "text-white bg-qms-600" : "text-slate-600 bg-slate-100 hover:bg-slate-200")"
                           href="?page=@i&search=@Model.SearchTerm&status=@Model.Status&type=@Model.Type">
                            @i
                        </a>
                    }
                    <a class="px-3 py-2 text-sm text-slate-600 bg-slate-100 rounded-lg hover:bg-slate-200 transition-colors @(Model.CurrentPage >= Model.TotalPages ? "pointer-events-none opacity-50" : "")"
                       href="?page=@(Model.CurrentPage + 1)&search=@Model.SearchTerm&status=@Model.Status&type=@Model.Type">
                        Next
                    </a>
                </nav>
            </div>
        </div>
    </div>
</div>

