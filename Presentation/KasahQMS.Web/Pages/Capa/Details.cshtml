@page "{id:guid}"
@model KasahQMS.Web.Pages.Capa.DetailsModel
@{
    ViewData["Title"] = "CAPA Details";
}

<div class="max-w-5xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex flex-col gap-4 lg:flex-row lg:items-start lg:justify-between">
        <div>
            <nav class="flex items-center gap-2 text-sm text-slate-500 mb-2">
                <a href="/Dashboard" class="hover:text-brand-600">Dashboard</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                <a href="/Capa" class="hover:text-brand-600">CAPA</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                <span class="text-slate-700">@Model.Number</span>
            </nav>
            <h1 class="text-2xl font-bold text-slate-900">@Model.Title</h1>
            <div class="flex items-center gap-3 mt-2 flex-wrap">
                <span class="px-2.5 py-1 text-xs font-semibold rounded-full @Model.StatusClass">@Model.StatusLabel</span>
                <span class="px-2.5 py-1 text-xs font-semibold rounded-full @Model.PriorityClass">@Model.Priority Priority</span>
                <span class="text-xs text-slate-500">@Model.Type</span>
            </div>
        </div>
        <div class="flex items-center gap-2">
            @if (Model.CanEdit)
            {
                <a href="/Capa/Edit/@Model.Id" class="px-4 py-2 bg-brand-600 text-white rounded-lg hover:bg-brand-700 transition-colors flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                    Edit CAPA
                </a>
            }
            <a href="/Capa" class="px-4 py-2 text-slate-600 hover:bg-slate-100 rounded-lg transition-colors flex items-center gap-2 border border-slate-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                Back
            </a>
        </div>
    </div>

    <div class="grid gap-6 lg:grid-cols-3">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Description -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-900 mb-4">Description</h2>
                <p class="text-slate-600 whitespace-pre-wrap">@(Model.Description ?? "No description provided.")</p>
            </div>

            <!-- Immediate Actions -->
            @if (!string.IsNullOrEmpty(Model.ImmediateActions))
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Immediate Actions</h2>
                    <p class="text-slate-600 whitespace-pre-wrap">@Model.ImmediateActions</p>
                </div>
            }

            <!-- Root Cause Analysis -->
            @if (!string.IsNullOrEmpty(Model.RootCauseAnalysis))
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Root Cause Analysis</h2>
                    <p class="text-slate-600 whitespace-pre-wrap">@Model.RootCauseAnalysis</p>
                </div>
            }

            <!-- Corrective Actions -->
            @if (!string.IsNullOrEmpty(Model.CorrectiveActions))
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Corrective Actions</h2>
                    <p class="text-slate-600 whitespace-pre-wrap">@Model.CorrectiveActions</p>
                </div>
            }

            <!-- Preventive Actions -->
            @if (!string.IsNullOrEmpty(Model.PreventiveActions))
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Preventive Actions</h2>
                    <p class="text-slate-600 whitespace-pre-wrap">@Model.PreventiveActions</p>
                </div>
            }

            <!-- Implementation Notes -->
            @if (!string.IsNullOrEmpty(Model.ImplementationNotes))
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Implementation Notes</h2>
                    <p class="text-slate-600 whitespace-pre-wrap">@Model.ImplementationNotes</p>
                </div>
            }

            <!-- Verification -->
            @if (!string.IsNullOrEmpty(Model.VerificationNotes) || Model.IsEffective.HasValue)
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <h2 class="text-lg font-semibold text-slate-900 mb-4">Effectiveness Verification</h2>
                    @if (Model.IsEffective.HasValue)
                    {
                        <div class="mb-4 flex items-center gap-2">
                            @if (Model.IsEffective.Value)
                            {
                                <span class="px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-sm font-medium flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                                    Effective
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 bg-red-100 text-red-700 rounded-full text-sm font-medium flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                                    Not Effective
                                </span>
                            }
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.VerificationNotes))
                    {
                        <p class="text-slate-600 whitespace-pre-wrap">@Model.VerificationNotes</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.VerifiedBy))
                    {
                        <p class="text-sm text-slate-500 mt-3">Verified by @Model.VerifiedBy on @Model.VerifiedAt</p>
                    }
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Details -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-900 mb-4">Details</h2>
                <dl class="space-y-4 text-sm">
                    <div>
                        <dt class="text-slate-500">Type</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.Type</dd>
                    </div>
                    <div>
                        <dt class="text-slate-500">Owner</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.Owner</dd>
                    </div>
                    <div>
                        <dt class="text-slate-500">Created By</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.Creator</dd>
                    </div>
                    <div>
                        <dt class="text-slate-500">Target Completion</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.DueDate</dd>
                    </div>
                </dl>
            </div>

            <!-- Linked Items -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-lg font-semibold text-slate-900 mb-4">Linked Items</h2>
                <dl class="space-y-4 text-sm">
                    <div>
                        <dt class="text-slate-500">Source Audit</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.LinkedAudit</dd>
                    </div>
                    <div>
                        <dt class="text-slate-500">Source Finding</dt>
                        <dd class="font-medium text-slate-900 mt-1">@Model.LinkedFinding</dd>
                    </div>
                </dl>
            </div>

            <!-- Permissions Info -->
            @if (!Model.CanEdit)
            {
                <div class="bg-amber-50 rounded-xl border border-amber-200 p-4">
                    <div class="flex items-center gap-2 text-amber-700 text-sm">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                        <span>@Model.UserPermissionContext</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
