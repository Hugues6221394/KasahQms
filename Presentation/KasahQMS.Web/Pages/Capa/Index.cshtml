@page
@model KasahQMS.Web.Pages.Capa.IndexModel
@removeTagHelper "Microsoft.AspNetCore.Mvc.Razor.TagHelpers.OptionTagHelper", "Microsoft.AspNetCore.Mvc.Razor"
@{
    ViewData["Title"] = "CAPA";
}

<div class="space-y-6">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Corrective & Preventive Actions</h1>
            <p class="text-sm text-slate-500">Track and manage CAPA records for continuous improvement.</p>
        </div>
        <a href="/Capa/Create" class="inline-flex items-center rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white hover:bg-brand-700">
            Initiate CAPA
        </a>
    </div>

    <div class="grid gap-4 sm:grid-cols-2 xl:grid-cols-6">
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Draft</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.DraftCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-slate-100 text-slate-600 flex items-center justify-center">1</div>
        </div>
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Investigation</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.UnderInvestigationCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-amber-100 text-amber-600 flex items-center justify-center">2</div>
        </div>
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Defined</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.ActionsDefinedCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-blue-100 text-blue-700 flex items-center justify-center">3</div>
        </div>
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Implemented</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.ActionsImplementedCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-indigo-100 text-indigo-700 flex items-center justify-center">4</div>
        </div>
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Verified</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.VerifiedCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-emerald-100 text-emerald-700 flex items-center justify-center">5</div>
        </div>
        <div class="card p-4 flex items-center justify-between">
            <div>
                <div class="text-xs text-slate-500 uppercase">Closed</div>
                <div class="text-2xl font-semibold text-slate-900">@Model.ClosedCount</div>
            </div>
            <div class="w-10 h-10 rounded-lg bg-green-100 text-green-700 flex items-center justify-center">6</div>
        </div>
    </div>

    <div class="card p-4">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-slate-700 mb-1">Search</label>
                <input type="search" name="search" value="@Model.SearchTerm"
                       placeholder="Search CAPAs..."
                       class="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-200 focus:border-brand-400">
            </div>
            <div class="w-48">
                <label class="block text-sm font-medium text-slate-700 mb-1">Status</label>
                <select name="status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-200 focus:border-brand-400">
                    <option value="">All</option>
                    <option value="Draft">Draft</option>
                    <option value="UnderInvestigation">Under Investigation</option>
                    <option value="ActionsDefined">Actions Defined</option>
                    <option value="ActionsImplemented">Actions Implemented</option>
                    <option value="EffectivenessVerified">Effectiveness Verified</option>
                    <option value="Closed">Closed</option>
                </select>
            </div>
            <div class="w-44">
                <label class="block text-sm font-medium text-slate-700 mb-1">Priority</label>
                <select name="priority" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-brand-200 focus:border-brand-400">
                    <option value="">All</option>
                    <option value="Critical">Critical</option>
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
            </div>
            <button type="submit" class="px-4 py-2 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700">
                Filter
            </button>
        </form>
    </div>

    <div class="card overflow-hidden">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
            <thead class="bg-slate-50 text-slate-500 uppercase text-xs">
                <tr>
                    <th class="px-6 py-4 text-left font-semibold">CAPA</th>
                    <th class="px-6 py-4 text-left font-semibold">Type</th>
                    <th class="px-6 py-4 text-left font-semibold">Priority</th>
                    <th class="px-6 py-4 text-left font-semibold">Status</th>
                    <th class="px-6 py-4 text-left font-semibold">Owner</th>
                    <th class="px-6 py-4 text-left font-semibold">Due</th>
                    <th class="px-6 py-4 text-right font-semibold">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-100 bg-white">
                @if (!Model.Capas.Any())
                {
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center text-slate-500">No CAPA records found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Capas)
                    {
                        <tr>
                            <td class="px-6 py-4">
                                <div class="font-semibold text-slate-800">@item.Title</div>
                                <div class="text-xs text-slate-500">@item.Number</div>
                            </td>
                            <td class="px-6 py-4 text-slate-600">@item.Type</td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @item.PriorityClass">@item.Priority</span>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @item.StatusClass">@item.Status</span>
                            </td>
                            <td class="px-6 py-4 text-slate-600">@item.Owner</td>
                            <td class="px-6 py-4 text-slate-600">@item.DueDate</td>
                            <td class="px-6 py-4 text-right">
                                <a asp-page="/Capa/Details" asp-route-id="@item.Id" class="text-brand-600 hover:text-brand-700 text-sm font-medium">View</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
