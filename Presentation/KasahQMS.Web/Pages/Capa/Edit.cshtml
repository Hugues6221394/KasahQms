@page "{id:guid}"
@model KasahQMS.Web.Pages.Capa.EditModel
@{
    ViewData["Title"] = "Edit CAPA";
    
    string GetStatusColor(string status) => status switch
    {
        "Draft" => "bg-slate-100 text-slate-700",
        "UnderInvestigation" => "bg-amber-100 text-amber-700",
        "ActionsDefined" => "bg-blue-100 text-blue-700",
        "ActionsImplemented" => "bg-indigo-100 text-indigo-700",
        "EffectivenessVerified" => "bg-emerald-100 text-emerald-700",
        "Closed" => "bg-green-100 text-green-800",
        _ => "bg-slate-100 text-slate-600"
    };
}

<div class="max-w-5xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-sm text-slate-500 mb-6">
        <a href="/Dashboard" class="hover:text-brand-600">Dashboard</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        <a href="/Capa" class="hover:text-brand-600">CAPA</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
        <span class="text-slate-700">Edit @Model.CapaNumber</span>
    </nav>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200 text-red-700">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                @Model.ErrorMessage
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-700">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                @Model.SuccessMessage
            </div>
        </div>
    }

    @if (!Model.CanEdit)
    {
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 text-center">
            <svg class="w-16 h-16 text-slate-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
            <h2 class="text-xl font-semibold text-slate-700 mb-2">Access Restricted</h2>
            <p class="text-slate-500 mb-4">You don't have permission to edit this CAPA.</p>
            <a href="/Capa" class="inline-flex items-center gap-2 px-4 py-2 bg-brand-600 text-white rounded-lg hover:bg-brand-700">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
                Back to CAPA List
            </a>
        </div>
    }
    else
    {
        <!-- CAPA Lifecycle Status -->
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-6">
            <h2 class="text-lg font-semibold text-slate-900 mb-4">CAPA Lifecycle</h2>
            <div class="flex items-center gap-2 overflow-x-auto pb-2">
                @{
                    var statuses = new[] { "Draft", "UnderInvestigation", "ActionsDefined", "ActionsImplemented", "EffectivenessVerified", "Closed" };
                    var statusLabels = new[] { "Draft", "Under Investigation", "Actions Defined", "Actions Implemented", "Effectiveness Verified", "Closed" };
                    var currentIndex = Array.IndexOf(statuses, Model.CurrentStatus);
                }
                @for (int i = 0; i < statuses.Length; i++)
                {
                    var isActive = statuses[i] == Model.CurrentStatus;
                    var isPast = i < currentIndex;
                    var isFuture = i > currentIndex;
                    
                    <div class="flex items-center">
                        <div class="flex flex-col items-center min-w-[100px]">
                            <div class="w-8 h-8 rounded-full flex items-center justify-center text-sm font-semibold @(isActive ? "bg-brand-600 text-white" : isPast ? "bg-emerald-500 text-white" : "bg-slate-200 text-slate-500")">
                                @if (isPast)
                                {
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                                }
                                else
                                {
                                    @(i + 1)
                                }
                            </div>
                            <span class="text-xs text-center mt-1 @(isActive ? "font-semibold text-brand-700" : "text-slate-500")">@statusLabels[i]</span>
                        </div>
                        @if (i < statuses.Length - 1)
                        {
                            <div class="w-8 h-0.5 @(i < currentIndex ? "bg-emerald-500" : "bg-slate-200") mx-1"></div>
                        }
                    </div>
                }
            </div>
            
            @if (Model.CanAdvanceStatus && !string.IsNullOrEmpty(Model.NextStatus))
            {
                <div class="mt-4 pt-4 border-t border-slate-200 flex items-center justify-between">
                    <p class="text-sm text-slate-600">
                        Current status: <span class="font-semibold px-2 py-0.5 rounded @GetStatusColor(Model.CurrentStatus)">@Model.CurrentStatus</span>
                    </p>
                    <form method="post" asp-page-handler="AdvanceStatus">
                        <button type="submit" class="px-4 py-2 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700 flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                            Advance to @Model.NextStatus
                        </button>
                    </form>
                </div>
            }
            @if (Model.CurrentStatus == "Closed")
            {
                <div class="mt-4 pt-4 border-t border-slate-200">
                    <p class="text-sm text-emerald-700 font-medium flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        This CAPA has been closed.
                    </p>
                </div>
            }
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-slate-200">
            <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between">
                <div>
                    <h1 class="text-xl font-semibold text-slate-900">Edit CAPA</h1>
                    <p class="text-sm text-slate-500">@Model.CapaNumber â€¢ @Model.UserEditPermission</p>
                </div>
                @if (Model.CanDelete)
                {
                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this CAPA? This action cannot be undone.');">
                        <button type="submit" class="px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                            Delete CAPA
                        </button>
                    </form>
                }
                else
                {
                    <span class="text-sm text-slate-400 flex items-center gap-1">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                        Cannot delete (verified/closed)
                    </span>
                }
            </div>

            <form method="post" class="p-6 space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Title -->
                    <div class="md:col-span-2">
                        <label asp-for="Title" class="block text-sm font-medium text-slate-700 mb-1">Title *</label>
                        <input asp-for="Title" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Enter CAPA title" />
                        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Description -->
                    <div class="md:col-span-2">
                        <label asp-for="Description" class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                        <textarea asp-for="Description" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Detailed description of the issue"></textarea>
                    </div>

                    <!-- Type -->
                    <div>
                        <label asp-for="CapaType" class="block text-sm font-medium text-slate-700 mb-1">CAPA Type</label>
                        <select asp-for="CapaType" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="Corrective">Corrective Action</option>
                            <option value="Preventive">Preventive Action</option>
                            <option value="Both">Corrective & Preventive</option>
                        </select>
                    </div>

                    <!-- Priority -->
                    <div>
                        <label asp-for="Priority" class="block text-sm font-medium text-slate-700 mb-1">Priority</label>
                        <select asp-for="Priority" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Critical">Critical</option>
                        </select>
                    </div>

                    <!-- Owner -->
                    <div>
                        <label asp-for="OwnerId" class="block text-sm font-medium text-slate-700 mb-1">Owner</label>
                        <select asp-for="OwnerId" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500">
                            <option value="">Select owner...</option>
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.Id">@user.Name (@user.Department)</option>
                            }
                        </select>
                    </div>

                    <!-- Target Completion Date -->
                    <div>
                        <label asp-for="TargetCompletionDate" class="block text-sm font-medium text-slate-700 mb-1">Target Completion Date</label>
                        <input asp-for="TargetCompletionDate" type="date" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" />
                    </div>

                    <!-- Immediate Actions -->
                    <div class="md:col-span-2">
                        <label asp-for="ImmediateActions" class="block text-sm font-medium text-slate-700 mb-1">Immediate Actions</label>
                        <textarea asp-for="ImmediateActions" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Actions taken immediately to contain the issue"></textarea>
                    </div>

                    <!-- Root Cause Analysis -->
                    <div class="md:col-span-2">
                        <label asp-for="RootCauseAnalysis" class="block text-sm font-medium text-slate-700 mb-1">Root Cause Analysis</label>
                        <textarea asp-for="RootCauseAnalysis" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Analysis of the root cause of the issue"></textarea>
                    </div>

                    <!-- Corrective Actions -->
                    <div class="md:col-span-2">
                        <label asp-for="CorrectiveActions" class="block text-sm font-medium text-slate-700 mb-1">Corrective Actions</label>
                        <textarea asp-for="CorrectiveActions" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Actions to correct the issue"></textarea>
                    </div>

                    <!-- Preventive Actions -->
                    <div class="md:col-span-2">
                        <label asp-for="PreventiveActions" class="block text-sm font-medium text-slate-700 mb-1">Preventive Actions</label>
                        <textarea asp-for="PreventiveActions" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Actions to prevent recurrence"></textarea>
                    </div>

                    <!-- Implementation Notes -->
                    <div class="md:col-span-2">
                        <label asp-for="ImplementationNotes" class="block text-sm font-medium text-slate-700 mb-1">Implementation Notes</label>
                        <textarea asp-for="ImplementationNotes" rows="3" class="w-full rounded-lg border border-slate-300 px-4 py-2.5 focus:ring-2 focus:ring-brand-500 focus:border-brand-500" placeholder="Notes about action implementation"></textarea>
                    </div>
                </div>

                <div class="flex items-center justify-between pt-4 border-t border-slate-200">
                    <a href="/Capa/Details/@Model.Id" class="px-4 py-2 text-slate-600 hover:text-slate-800">Cancel</a>
                    <button type="submit" class="px-6 py-2.5 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700 transition-colors">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    }
</div>
