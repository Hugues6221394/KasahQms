@page
@model KasahQMS.Web.Pages.Templates.IndexModel
@{
    ViewData["Title"] = "Document Templates";
}

<div class="space-y-6">
    <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <h1 class="text-2xl font-semibold text-slate-900">Document Templates</h1>
            <p class="text-sm text-slate-500">Access and use document templates for your work. Templates are created by TMD for authorized departments.</p>
        </div>
        @if (Model.CanCreateTemplate)
        {
            <a href="/Templates/Create" class="inline-flex items-center rounded-lg bg-brand-600 px-4 py-2 text-sm font-semibold text-white hover:bg-brand-700">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
                Create Template
            </a>
        }
    </div>

    @if (Model.UserRoleContext == "Auditor")
    {
        <div class="p-4 bg-amber-50 border border-amber-200 rounded-xl text-amber-700 text-sm flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
            <span><strong>Read-Only Mode:</strong> Auditors can view templates but cannot create or modify them.</span>
        </div>
    }

    @if (!Model.Templates.Any())
    {
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
            <svg class="w-16 h-16 mx-auto text-slate-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="text-lg font-semibold text-slate-900 mb-2">No Templates Available</h3>
            <p class="text-slate-500 text-sm mb-4">
                @if (Model.CanCreateTemplate)
                {
                    <span>Create your first document template to get started.</span>
                }
                else
                {
                    <span>No templates have been shared with your department yet.</span>
                }
            </p>
            @if (Model.CanCreateTemplate)
            {
                <a href="/Templates/Create" class="inline-flex items-center px-4 py-2 bg-brand-600 text-white font-medium rounded-lg hover:bg-brand-700">
                    Create Template
                </a>
            }
        </div>
    }
    else
    {
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
            @foreach (var template in Model.Templates)
            {
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-5 hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between mb-3">
                        <div class="w-10 h-10 rounded-lg bg-brand-100 text-brand-600 flex items-center justify-center">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
                        </div>
                        <span class="text-xs text-slate-500">@template.DocumentNumber</span>
                    </div>
                    <h3 class="font-semibold text-slate-900 mb-1 line-clamp-1">@template.Title</h3>
                    <p class="text-sm text-slate-500 mb-3 line-clamp-2">@(template.Description ?? "No description")</p>
                    <div class="flex flex-wrap gap-2 mb-4">
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-700">@template.DocumentType</span>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-700">@template.Status</span>
                    </div>
                    <div class="text-xs text-slate-400 mb-3">
                        <strong>Access:</strong> @Model.GetDepartmentDisplayNames(template.AuthorizedDeptIds)
                    </div>
                    <div class="flex items-center justify-between pt-3 border-t border-slate-100">
                        <span class="text-xs text-slate-400">Created @template.CreatedAt</span>
                        <div class="flex gap-2">
                            <a href="/Templates/View/@template.Id" class="text-sm text-brand-600 hover:text-brand-700 font-medium">View</a>
                            @if (Model.UserRoleContext != "Auditor")
                            {
                                <a href="/Documents/CreateFromTemplate/@template.Id" class="text-sm text-emerald-600 hover:text-emerald-700 font-medium">Use Template</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
