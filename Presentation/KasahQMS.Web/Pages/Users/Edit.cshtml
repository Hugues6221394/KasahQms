@page
@model KasahQMS.Web.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="space-y-6">
    <div>
        <h1 class="text-2xl font-semibold text-slate-900">Edit user</h1>
        <p class="text-sm text-slate-500">Update role assignments and reporting lines.</p>
    </div>

    <form method="post" class="card p-6 space-y-6">
        <input type="hidden" asp-for="Id" />
        <div class="grid gap-4 md:grid-cols-2">
            <div>
                <label class="form-label">Full name</label>
                <input class="form-input" asp-for="DisplayName" readonly />
            </div>
            <div>
                <label class="form-label">Email</label>
                <input class="form-input" asp-for="Email" readonly />
            </div>
            <div>
                <label class="form-label">Job title</label>
                <input class="form-input" asp-for="JobTitle" />
            </div>
            <div>
                <label class="form-label">Organization unit</label>
                <select class="form-input form-select" asp-for="OrganizationUnitId">
                    <option value="">Select department</option>
                    @foreach (var unit in Model.OrganizationUnits)
                    {
                        <option value="@unit.Id">@unit.Name</option>
                    }
                </select>
            </div>
            <div>
                <label class="form-label">Manager</label>
                <select class="form-input form-select" asp-for="ManagerId">
                    <option value="">No manager</option>
                    @foreach (var manager in Model.Managers)
                    {
                        <option value="@manager.Id">@manager.Name</option>
                    }
                </select>
            </div>
            <div>
                <label class="form-label">Status</label>
                <select class="form-input form-select" asp-for="IsActive">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>

        <div>
            <div class="text-sm font-semibold text-slate-700">Assigned roles</div>
            <div class="mt-3 grid gap-2 md:grid-cols-2">
                @foreach (var role in Model.Roles)
                {
                    <label class="flex items-center gap-2 rounded-lg border border-slate-200 px-3 py-2 text-sm text-slate-600">
                        <input type="checkbox" name="SelectedRoleIds" value="@role.Id" class="h-4 w-4 rounded border-slate-300 text-brand-600"
                               @(Model.SelectedRoleIds.Contains(role.Id) ? "checked" : "") />
                        <span>@role.Name</span>
                    </label>
                }
            </div>
        </div>

        <div class="flex items-center gap-3">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="/Users" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
